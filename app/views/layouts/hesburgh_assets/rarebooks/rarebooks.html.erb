  </head>
  <body id="body" class="home">
    <!-- container -->
    <div class="container">

      <div class="row header">
        <div class="twelve columns header-inner">

          <!--#include virtual="/ssi/header.shtml" -->
          <%-# preheader_content %>
          <%= rarebooks_include_ssi("/ssi/header.shtml") %>
          <!--#include virtual="/ssi/site-search.shtml" -->
          <%= rarebooks_include_ssi("/ssi/site-search.shtml") %>

        </div>
        <div class="row navigation" id="main-menu">
          <!--#include virtual="/ssi/top-navigation.shtml" -->
          <%= rarebooks_include_ssi("/ssi/top-navigation.shtml") %>
        </div>
      </div>

      <div class="row hide-on-phones" id="breadcrumb">
        <div class="twelve columns">
          <p><a href="http://library.nd.edu/">Hesburgh Libraries</a><!-- InstanceBeginEditable name="crumbs" -->
            &gt; <a href="/index.shtml">Rare Books &amp; Special Collections</a> <%= @page_title ? ("&gt; ").html_safe + @page_title : "" %>
        </div>
      </div>
      <div class="row" id="content">
          <%= yield %>
          <!--#include virtual="/ssi/info.shtml" -->
          <%= rarebooks_include_ssi("/ssi/info.shtml") %>
          </div>
      </div>
    <div class="row footer">
      <!--#include virtual="/ssi/footer.shtml" -->
      <%= rarebooks_include_ssi("/ssi/footer.shtml") %>
    </div>
