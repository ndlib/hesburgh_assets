  <meta name="viewport" content="width=device-width" />
  <!-- InstanceBeginEditable name="doctitle" -->
  <title><%= @page_title ? @page_title +("// ").html_safe : "" %>Rare Books &amp; Special Collections // Hesburgh Libraries // University of Notre Dame</title>
  <!-- InstanceEndEditable -->
  <!-- Included CSS Files -->
  <%= hesburgh_stylesheet_link_tag :rarebooks, "index.css", :media => "all" %>
  <!-- Included JS Files -->
  <%= hesburgh_javascript_include_tag :rarebooks, "index.js" %>
